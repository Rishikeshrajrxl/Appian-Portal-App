a!localVariables(
  local!DarkMode: false(),
  local!SelectedCategory,
  local!Categories: rule!R_Categories_Integration().result.body,
  local!Posts: rule!R_Posts_Integration().result.body,
  local!AboutUSPage:false(),
  local!HomePage:true(),
  {
    /*Upper Section*/
    a!cardLayout(
      showBorder: false(),
      height: "AUTO",
      contents: {
        a!sectionLayout(
          contents: {
            a!columnsLayout(
              columns: {
                a!columnLayout(
                  width: "3X",
                  contents: {
                    a!sideBySideLayout(
                      items: {
                        a!sideBySideItem(
                          item: a!richTextDisplayField(
                            align: "CENTER",
                            value: {
                              a!richTextIcon(icon: "HOME", ),
                              "  ",
                              a!richTextItem(
                                text: "Main Stream", style: "STRONG", 
                                link: a!dynamicLink(
                                  saveInto: {
                                    a!save(local!HomePage,true()),
                                    a!save(local!AboutUSPage,false()),
                                    }
                                  
                                ),
                                linkStyle: "STANDALONE"
                              ),
                              
                            }
                          )
                        ),
                        a!sideBySideItem(
                          item: a!richTextDisplayField(
                            value: a!richTextItem(
                              text: "About Us",
                              link: a!dynamicLink(
                                saveInto: {
                                  a!save(local!AboutUSPage,true()),
                                  a!save(local!HomePage,false()),
                                  }
                              ),
                              linkStyle: "STANDALONE"
                              
                            )
                          )
                        )
                      }
                    )
                  }
                ),
                a!columnLayout(width: "8X", ),
                a!columnLayout(
                  width: "1X",
                  contents: {
                    a!cardLayout(
                      contents: {
                        a!richTextDisplayField(
                          align: "CENTER",
                          value: a!richTextItem(
                            text: if(
                              toboolean(local!DarkMode),
                              "Light",
                              "Dark",
                            ),
                            style: "STRONG",
                          )
                        )
                      },
                      style: if(
                        toboolean(local!DarkMode),
                        "#f7f6f2",
                        "#2d2e2d"
                      ),
                      link: a!dynamicLink(
                        saveInto: if(
                          toboolean(local!DarkMode),
                          a!save(local!DarkMode, false()),
                          a!save(local!DarkMode, true())
                        )
                      ),
                      shape: "ROUNDED"
                    )
                  }
                )
              }
            )
          }
        )
      },
      style: if(
        toboolean(local!DarkMode),
        "#2d2e2d",
        "#fcfbf7"
      ),
      shape: "ROUNDED",
      
    ),
    /*Main Body*/
    /*Main Stream*/
    a!cardLayout(
      contents: {
        a!columnsLayout(
          columns: {
            /*First Column Section*/
            a!columnLayout(
              width: "NARROW",
              contents: {
                /*Top Categories Section*/
                a!cardLayout(
                  shape: "ROUNDED",
                  showBorder: false(),
                  contents: {
                    a!richTextDisplayField(
                      value: a!richTextItem(
                        text: "Top Categories",
                        Style: "STRONG",
                        size: "SMALL"
                      )
                    ),
                    a!forEach(
                      items: local!Categories,
                      expression: a!cardLayout(
                        decorativeBarPosition: "END",
                        decorativeBarColor: "POSITIVE",
                        marginBelow: "LESS",
                        contents: {
                          a!sideBySideLayout(
                            items: {
                              a!sideBySideItem(
                                item: a!richTextDisplayField(value: a!richTextIcon(icon: "filter", ))
                              ),
                              a!sideBySideItem(
                                item: a!richTextDisplayField(
                                  value: {
                                    a!richTextItem(
                                      text: index(fv!item, "Name", {}),
                                      style: "STRONG",
                                    ),
                                    char(10),
                                    a!richTextItem(
                                      text: count(
                                        wherecontains(
                                          index(fv!item, "CategoryId", {}),
                                          index(local!Posts, "CategoryId", {})
                                        )
                                      ) & " Posts",
                                      size: "SMALL"
                                    )
                                  }
                                )
                              )
                            }
                          )
                        },
                        shape: "ROUNDED",
                        style: if(
                          tointeger(index(local!SelectedCategory,"CategoryId",{})) = tointeger(index(fv!item,"CategoryId",{})),
                          "#bbfccc",
                          {}
                        ),
                        link: a!dynamicLink(
                          saveInto: a!save(local!SelectedCategory, fv!item)
                        )
                      )
                    )
                  }
                )
              }
            ),
            /*Middle Column Section*/
            a!columnLayout(
              width: "4X",
              contents: {
                a!cardLayout(
                  shape: "ROUNDED",
                  decorativeBarPosition: "TOP",
                  decorativeBarColor: "POSITIVE",
                  contents: {
                    a!sideBySideLayout(
                      items: {
                        a!sideBySideItem(
                          item: a!richTextDisplayField(
                            align:"CENTER",
                            value: a!richTextItem(
                              text: index(local!SelectedCategory,"Name",{}),
                              style: "STRONG",
                              size: "MEDIUM"
                              
                            )
                          )
                        )
                      }
                    ),
                    a!sectionLayout(
                      marginAbove: "NONE",
                      divider: "BELOW",
                      
                    ),
                    a!forEach(
                      items: index(
                        local!Posts,
                        wherecontains(
                        tointeger(index(local!SelectedCategory,"CategoryId",{})),
                        tointeger(index(local!Posts,"CategoryId",{}))
                      ),
                        {}
                      ),
                      expression: a!cardLayout(
                        marginBelow: "LESS",
                        contents: {
                          a!columnsLayout(
                            columns: {
                              a!columnLayout(
                                width: "AUTO",
                                contents: {
                                  a!richTextDisplayField(
                                    value: {
                                      a!richTextImage(
                                      image: a!userImage(
                                        user: loggedInUser()
                                      )
                                    ),
                                      "   ",
                                      a!richTextItem(
                                        text: "Rishikesh",
                                        style: "STRONG",
                                        size: "SMALL"
                                      )
                                    }
                                  )
                                }
                              ),
                             
                            }
                          ),
                          a!columnsLayout(
                            marginAbove: "MORE",
                            marginBelow:  "MORE",
                            columns: {
                              a!columnLayout(
                                width: "EXTRA_NARROW"
                              ),
                              a!columnLayout(
                                contents: {
                                  a!richTextDisplayField(
                                    value: a!richTextItem(
                                      text: index(fv!item,"Content",{})
                                    )
                                  )
                                }
                              )
                            }
                          )
                        },
                        shape: "ROUNDED"
                      )
                    )
                  }
                )
              }
            ),
            /*Last Column Section*/
            a!columnLayout(
              contents: {
                a!cardLayout(
                  shape: "ROUNDED",
                  showBorder: false(),
                  contents: {
                    a!richTextDisplayField(
                      value: a!richTextItem(
                        text: "Popular Posts",
                        Style: "STRONG",
                        size: "SMALL"
                      )
                    )
                  }
                )
              }
            )
          }
        )
      },
      style: if(
        toboolean(local!DarkMode),
        "#b3b1b2",
        "#fcf5fb"
      ),
      showWhen: toboolean(local!HomePage)
    )
  }
)
